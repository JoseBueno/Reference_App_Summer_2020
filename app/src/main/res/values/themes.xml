<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="primaryButtonTheme">
            @style/Widget.Button.Primary
        </item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/primaryText</item>
        <item name="buttonNormalColor">@color/colorPrimary</item>
        <item name="buttonHighlightColor">@color/colorPrimaryLight</item>
        <item name="buttonTextColor">@color/secondaryText</item>
    </style>

    <style name="Theme.Greenie" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="primaryButtonTheme">
            @style/Widget.Button.Primary
        </item>
        <item name="colorPrimary">@color/greenieColorPrimary</item>
        <item name="colorPrimaryDark">@color/greenieColorPrimaryDark</item>
        <item name="colorAccent">@color/greenieColorAccent</item>
        <item name="primaryTextColor">@color/primaryText</item>
        <item name="buttonNormalColor">@color/greenieColorPrimary</item>
        <item name="buttonHighlightColor">
            @color/greenieColorPrimaryLight
        </item>
        <item name="buttonTextColor">@color/secondaryText</item>
    </style>

    <style name="Widget.Button.Primary"
        parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/buttonNormalColor</item>
        <item name="colorControlHighlight">
            ?attr/buttonHighlightColor
        </item>
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>

</resources>